<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScoreKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#E64A19</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColor">#212121</item>
        <item name="colorAccent">#536DFE</item>
        <!-- Secondary brand color. -->
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:colorSecondary">#757575</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">
            @style/myButtonStyle
        </item>
    </style>

    <style name="customTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TeamLabel" parent="customTextView">
        <item name="android:textColor">#FF5722</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="HeaderLabel" parent="customTextView">
        <item name="android:textColor">#FF5722</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="ScoreLabel" parent="customTextView">
        <item name="android:textColor">#3700b3</item>
        <item name="android:textSize">150sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="myButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#3700b3</item>
        <item name="android:background">#3700b3</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="myRadioButtons">
        <item name="android:textSize">17sp</item>
        <item name="android:buttonTint">#3700b3</item>
        <item name="android:textColor">#3700b3</item>
    </style>

</resources>